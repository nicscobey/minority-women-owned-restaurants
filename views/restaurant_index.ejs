<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minority-Owned Restaurants</title>
    <!-- BULMA CSS - https://bulma.io/ -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css" />
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
        integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
    <script defer src="js/script.js"></script>
</head>

<body>
    <nav class="navbar is-fixed-bottom" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">Find a Restaurant</a>
                <a class="navbar-item">Review a Restaurant</a>
                <a class="navbar-item">Register a Restaurant</a>

                <!-- <div class="navbar-item has-dropdown-up is-hoverable">
                    <a class="navbar-link">
                        More
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item">
                            About
                        </a>
                        <a class="navbar-item">
                            Jobs
                        </a>
                        <a class="navbar-item">
                            Contact
                        </a>
                        <hr class="navbar-divider">
                        <a class="navbar-item">
                            Report an issue
                        </a>
                    </div>
                </div> -->
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light">
                            Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div id="results-page" class="page">
        <h2 class="subtitle">
            <%if (results.length===1) {%>
                <%=results.length%> Result Found
                    <%} else {%>
                        <%=results.length%> Results Found <%}%>
        </h2>
        <div id="results-list">
            <% results.forEach((restaurant)=> { %>
                <div class="results-list-item">
                    <div class="result-item-img">
                        IMG ITEM
                    </div>
                    <div class="result-item-info">
                        <div class="result-item-text">
                            <h5 class="title is-5 no-margin">
                                <%=restaurant.name%>
                            </h5>
                            <div class="result-favorites-row">
                                <p>
                                    <% let totalReview=0; restaurant.reviews.forEach((review)=> {
                                        console.log(totalReview, review.rating);
                                        totalReview += review.rating;
                                        console.log(`new total is `, totalReview);
                                        })
                                        totalReview = totalReview / restaurant.reviews.length;
                                        console.log(totalReview);
                                        %>
                                        <%=totalReview%>
                                </p>
                                <p>(<%=restaurant.reviews.length%>)</p>
                            </div>
                            <p class="no-margin">
                                <%=restaurant.address%>
                            </p>
                            <h6 class="title is-6  no-margin result-tags">
                                <% restaurant.tags.forEach((tag)=> {%>
                                    <p class="result-tag">
                                        <%=tag%>
                                    </p>
                                    <%})%>
                            </h6>
                        </div>
                        <div class="result-item-star-info">
                            <p>FAV</p>

                            <p>ELL</p>
                        </div>
                    </div>
                </div>
                <hr>
                <%})%>
        </div>
    </div>
</body>

</html>